<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/design_default_color_primary"
        >
    </TextView>
    <ImageView
        android:id="@+id/imBanAn"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:src="@drawable/banan"
        android:layout_below="@+id/txtTenBanAn"

        tools:ignore="UnknownId">
    </ImageView>
    <ImageView
        android:id="@+id/imGoiMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imBanAn"
        tools:ignore="DuplicateIds,UnknownId"
        android:src="@drawable/goimon"

        android:layout_margin="@dimen/size10dp"
        android:visibility="invisible"
        >
    </ImageView>
    <ImageView
        android:id="@+id/imThanhToan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imBanAn"
        tools:ignore="UnknownId"
        android:src="@drawable/thanhtoan"
        android:layout_toRightOf="@id/imGoiMon"

        android:layout_margin="@dimen/size10dp"
        android:visibility="invisible"
        >
    </ImageView>
    <ImageView
        android:id="@+id/imAnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imBanAn"
        tools:ignore="UnknownId"
        android:src="@drawable/anbutton"
        android:layout_toRightOf="@id/imThanhToan"

        android:layout_margin="@dimen/size10dp"
        android:visibility="invisible"
        >
    </ImageView>

</RelativeLayout>